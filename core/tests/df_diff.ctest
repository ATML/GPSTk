    RESULT_VARIABLE RC)

if(NOT RC EQUAL 2)
    message(FATAL_ERROR "Test failed.")
endif()

execute_process(COMMAND
    ${TEST_PROG}
    -1 ${SOURCEDIR}/arlm200b.15o
    -2 ${SOURCEDIR}/df_diff.in
    -l 2
    RESULT_VARIABLE RC)

if(NOT RC EQUAL 1)
